<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.help.HelpFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:divider="@drawable/empty_tall_divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/cardGrey"
                android:elevation="@dimen/mqttCardElevation"
                app:cardCornerRadius="20dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/help_home_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:text="Home"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/help_home_title"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/help_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_home"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintTop_toBottomOf="@id/help_home_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/cardGrey"
                android:elevation="@dimen/mqttCardElevation"
                app:cardCornerRadius="20dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/help_settings_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:text="Settings"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintTop_toTopOf="parent" />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/help_settings_title"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/help_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_settings"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/help_settings_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/cardGrey"
                android:elevation="@dimen/mqttCardElevation"
                app:cardCornerRadius="20dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/help_subscribe_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:text="Subscribe"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintTop_toTopOf="parent" />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/help_subscribe_title"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/help_subscribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_subscribe"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/help_subscribe_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/cardGrey"
                android:elevation="@dimen/mqttCardElevation"
                app:cardCornerRadius="20dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/help_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:text="Card"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintTop_toTopOf="parent" />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/help_card_title"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/help_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_card"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/help_card_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/cardGrey"
                android:elevation="@dimen/mqttCardElevation"
                app:cardCornerRadius="20dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/help_unsubscribe_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:text="Unsubscribe"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintTop_toTopOf="parent" />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/help_unsubscribe_title"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/help_unsubscribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_unsubscribe"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/help_unsubscribe_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/cardGrey"
                android:elevation="@dimen/mqttCardElevation"
                app:cardCornerRadius="20dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/help_connect_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:text="Connect"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintTop_toTopOf="parent" />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/help_connect_title"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/help_connect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_connect"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/help_connect_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/cardGrey"
                android:elevation="@dimen/mqttCardElevation"
                app:cardCornerRadius="20dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/help_delete_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:text="Delete User"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintTop_toTopOf="parent" />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/help_delete_title"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/help_deleteUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_deleteUser"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/help_delete_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>